{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@config/*": ["src/config/*"],
			"@content/*": ["src/content/*"],
			"@data/*": ["src/data/*"],
			"@images/*": ["src/assets/images/*"],
			"@layouts/*": ["src/layouts/*"],
			"@scripts/*": ["src/assets/scripts/*"],
			"@styles/*": ["src/assets/styles/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
